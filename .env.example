# Craig the Compliance Manager - Environment Variables

# Company Configuration
COMPANY_NAME="Acme Corp"
COMPLIANCE_FRAMEWORKS="SOC 2,ISO 27001"
TIMEZONE="America/Los_Angeles"

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vanta MCP Server
VANTA_CLIENT_ID=your_vanta_client_id
VANTA_CLIENT_SECRET=your_vanta_client_secret
VANTA_ENV_FILE=/absolute/path/to/vanta-credentials.json

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_COMPLIANCE_CHANNEL="#compliance-updates"

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM_ADDRESS=craig@company.com
EMAIL_FROM_NAME="Craig (Compliance Manager)"

# Redis (Optional - for production state management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Workflow Configuration
DAILY_CHECK_HOUR=9
WEEKLY_SUMMARY_DAY=4  # 0=Monday, 4=Friday
WEEKLY_SUMMARY_HOUR=16

# Escalation Thresholds (days)
FIRST_EMAIL_DAYS=8
MANAGER_CC_DAYS=15

# Feature Flags
DRY_RUN=false  # Set to true to test without actually sending messages
DEBUG=false
